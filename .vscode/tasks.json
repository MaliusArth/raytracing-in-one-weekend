{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "problemMatcher": {
        "fileLocation": [
            "absolute"
        ],
        "pattern": {
            "regexp": "^(.+\\.odin)\\(([0-9]+):([0-9]+)\\)\\s*(Error|Warning):\\s*(.*)$",
            // "regexp": "^(.+\\.odin):([0-9]+):([0-9]+):\\s*(Error|Warning):\\s*(.*)$", // -error-pos-style:unix
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    },
    "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "build file",
            "type": "shell",
            "group": "build",
            "command": "build ${relativeFile} -file",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "debug file",
            "type": "shell",
            "group": "none",
            "command": "debug ${relativeFile}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "command": "build ${workspaceFolderBasename}",
        },
        {
            "label": "debug",
            "type": "shell",
            "group": "none",
            "command": "debug ${workspaceFolderBasename} ${relativeFile}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "run",
            "type": "shell",
            "group": "none",
            "command": "md .\\out 2>nul & .\\bin\\${workspaceFolderBasename}.exe > .\\out\\image.ppm",
            "presentation": {
                "reveal": "always",
            },
            "dependsOn": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "group": "test",
            "command": "build ${workspaceFolderBasename} -test",
            "presentation": {
                "reveal": "always",
            },
        }
    ],
}